<odoo>
    <!-- Government Contribution form view -->
    <record id="view_hr_government_form" model="ir.ui.view">
        <field name="model">hr.government.contribution</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="employee_id"/>
                        <field name="amount"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>
</odoo>
