<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data noupdate="1">

        <!-- Cron job to run the reminder method every 3 days -->
        <record id="ir_cron_overdue_invoice_reminder" model="ir.cron">
            <field name="name">Send Overdue Invoice Reminders</field>
            <field name="model_id" ref="account.model_account_move"/> <!-- Target model -->
            <field name="state">code</field> <!-- Run python code -->
            <field name="code">model.send_overdue_invoice_reminders()</field> <!-- Function to execute -->
            <field name="interval_number">3</field> <!-- Every 3 days -->
            <field name="interval_type">days</field>
            <field name="active" eval="True"/>
        </record>

    </data>
</odoo>
