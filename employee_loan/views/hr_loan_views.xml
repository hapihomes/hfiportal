<odoo>
    <record id="view_hr_loan_form" model="ir.ui.view">
        <field name="name">hr.loan.form</field>
        <field name="model">hr.loan</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <field name="employee_id"/>
                        <field name="loan_amount"/>
                        <field name="date"/>
                        <field name="state" readonly="1"/>
                    </group>
                    <footer>
                        <button name="action_approve" string="Approve" type="object"
                                class="btn btn-primary" />
                        <button name="action_paid" string="Mark as Paid" type="object"
                                class="btn btn-success" />
                        <button name="action_reset_draft" string="Reset to Draft" type="object"
                                class="btn btn-secondary" />
                    </footer>
                </sheet>
            </form>
        </field>
    </record>

    <record id="view_hr_loan_tree" model="ir.ui.view">
        <field name="name">hr.loan.tree</field>
        <field name="model">hr.loan</field>
        <field name="arch" type="xml">
            <tree>
                <field name="employee_id"/>
                <field name="loan_amount"/>
                <field name="date"/>
                <field name="state"/>
            </tree>
        </field>
    </record>

    <record id="action_hr_loan" model="ir.actions.act_window">
        <field name="name">Employee Loans</field>
        <field name="res_model">hr.loan</field>
        <field name="view_mode">tree,form</field>
    </record>
</odoo>